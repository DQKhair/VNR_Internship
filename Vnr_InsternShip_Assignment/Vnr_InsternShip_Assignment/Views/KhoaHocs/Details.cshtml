@model IEnumerable<Vnr_InsternShip_Assignment.Models.MonHocDTO>

@{
    ViewData["Title"] = "Details";
    ViewData["TitleKhoaHoc"] = ViewData["NameKhoaHoc"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .border_right__item {
        border-right: 3px solid #ccc;
    }

    .noneListType li {
        list-style-type: none;
    }
</style>
<div>
    <div class="container">
        <div class="row mt-1">
            <div class="col border_right__item">
                <ul class="noneListType">
                    @for (int i = 0; i < Model.Count(); i++)
                    {

                        if (i < (Model.Count() / 2) || Model.Count() / 2 < 1 )
                            {
                            <li>@(i + 1). @Model.ElementAt(i).TenMonHoc</li>
                        }
                    }
                </ul>
            </div>
            <div class="col">
                <ul class ="noneListType">
                    @for (int i = 0; i < Model.Count(); i++)
                    {

                        if (i >= (Model.Count() / 2) && Model.Count() / 2 >= 1)
                        {
                            <li>@(i + 1). @Model.ElementAt(i).TenMonHoc</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
