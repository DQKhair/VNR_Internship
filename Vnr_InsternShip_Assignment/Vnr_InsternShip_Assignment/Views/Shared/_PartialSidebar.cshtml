﻿@using Vnr_InsternShip_Assignment.Models;
@{
    VnrInternShipContext _context = new VnrInternShipContext();
    var _khoaHocs = _context.KhoaHocs.ToList();
    ViewData["listKhoaHoc"] = _khoaHocs;
}
<div class="container" style="height: 500px">
    <div>
        <h3>Khóa học</h3>
    </div>
    <div class="mx-2 w-100" style="height: 3px; background-color: #dcfe85"></div>
    
    <ul>
        @foreach (var item in ViewData["listKhoaHoc"] as List<KhoaHoc> ?? new List<KhoaHoc>())
        {
           <li>
                <a class="text-decoration-none  text-dark" asp-action="Details" asp-controller="khoahocs" asp-route-id=@item.Id>@item.TenKhoaHoc</a>
           </li>
        }
    </ul>
</div>
